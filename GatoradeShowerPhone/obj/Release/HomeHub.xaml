<Page
    x:Class="GatoradeShowerPhone.HomeHub"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GatoradeShowerPhone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush Stretch="UniformToFill" ImageSource="Assets/football_Image_original.jpg"/>
    </Page.Background>

    <Grid
        x:Name="home">
        <!--Page pane.-->
        <!--Contains Title-->
        <StackPanel 
                        Grid.Column="0"
                        Grid.Row="0"
                        Width="400" 
                        HorizontalAlignment="Left" 
                        Margin="0,0,0,515" >
            <TextBlock 
                        Text="NFL" 
                        Foreground="#DEF2C8" 
                        Margin="7,10,0,0" 
                        FontSize="35" 
                        FontFamily="Georgia" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Center"/>
            <TextBlock 
                        Text="Fan Finder"
                        Foreground="#DEF2C8" 
                        Margin="7,10,0,0" 
                        FontSize="35" 
                        FontFamily="Georgia" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Center"/>
        </StackPanel>

        <!--Displays welcome message-->
        <!--Displays analytics message-->
        <StackPanel Margin="0,130,0,308">
            <ListBox
                x:Name="homeList"
                FontFamily="Georgia"
                FontSize="30"
                FontWeight="Bold"
                Background="Transparent"
                Foreground="#14080E"
                Margin="0,10">
            </ListBox>
            <ListBox
                x:Name="activityList"
                FontFamily="Georgia"
                FontSize="20"
                FontWeight="Bold"
                Background="Transparent"
                Foreground="#14080E"
                Margin="0,10">
            </ListBox>
        </StackPanel>

        <!--Displays analytics of what groups are suggested to user-->
        <ScrollViewer Margin="0,337,0,69">
            <StackPanel
            Background="#C5DAC1"
            Opacity=".7" >
                <ListBox x:ConnectionId='4'
                x:Name="groupSelectionbox"
                Width="375"
                FontFamily="Georgia"
                FontSize="20"
                FontWeight="Bold"
                Background="Transparent"
                Foreground="#14080E" 
                                                       
                x:FieldModifier="public">
                </ListBox>
            </StackPanel>
        </ScrollViewer>

        <!--bottom menu-->
        <ScrollViewer
            HorizontalAlignment="Center"
            HorizontalScrollBarVisibility="Visible"
            Width="400"
            Margin="0,571,0,2">
            <StackPanel 
            x:Name="bottomPanel"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            Height="75"
            Width="400">
                <Button x:ConnectionId='1'
                     x:Name="groupsButton"
                                               
                    BorderBrush="{x:Null}"
                    FontFamily="Georgia "
                    FontSize="30"
                    FontWeight="Light"
                    Foreground="#C5DAC1"
                    HorizontalAlignment="Center">
                    Events
                </Button>
                <Line 
                    X2="25"></Line>
                <Button x:ConnectionId='2'
                    x:Name="gamesButton"
                                             
                    BorderBrush="{x:Null}"
                    FontFamily="Georgia"
                    FontSize="30"
                    FontWeight="Light"
                    Foreground="#C5DAC1"
                    HorizontalAlignment="Center">
                    Games
                </Button>
                <Line 
                    X2="25"></Line>
                <Button x:ConnectionId='3' 
                    x:Name="exitButton"
                                            
                    BorderBrush="{x:Null}"
                    FontFamily="Georgia"
                    FontSize="30"
                    FontWeight="light"
                    Foreground="#C5DAC1"
                    HorizontalAlignment="Center">
                    Exit
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

