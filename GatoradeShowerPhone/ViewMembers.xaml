                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontFamily="Georgia"
                FontSize="50"
                FontWeight="Bold"
                Foreground="#DEF2C8">
                View
            </TextBlock>
            <TextBlock
                Margin="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontFamily="Georgia"
                FontSize="50"
                FontWeight="Bold"
                Foreground="#DEF2C8">
                Members
            </TextBlock>
        </StackPanel>

        <ScrollViewer 
            Grid.Column="1" 
            Margin="12.334,133,8.666,10">
            <ListBox
                x:Name="MembersListBox"
                Height="auto"
                Background="#DEF2C8"
                Foreground="#14080E"
                Opacity=".7"
                FontFamily="Georgia"
                FontSize="15"
                FontWeight="Bold">
                
